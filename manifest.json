{
  "manifest_version": 3,
  "name": "HTML JS Injector",
  "author": "Rhee Euro",
  "version": "1.0",
  "description": "HTML JS Injector",
  "permissions": ["storage", "scripting", "tabs", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Open Code Override Manager Settings"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
